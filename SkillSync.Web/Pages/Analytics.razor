@page "/analytics"
@attribute [Authorize]
@using SkillSync.Web.Models
@using SkillSync.Web.Services
@using ApexCharts
@using System.Text.Json
@inject IAnalyticsService AnalyticsService
@inject NavigationManager Navigation

<PageTitle>Analytics - SkillSync</PageTitle>

<div class="px-4 sm:px-0">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
            <p class="text-gray-600 mt-1">Visualize your learning progress and insights</p>
        </div>
        <div class="flex gap-2">
            <select @bind="selectedDays" @bind:after="LoadChartData"
                    class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <option value="7">Last 7 days</option>
                <option value="14">Last 14 days</option>
                <option value="30">Last 30 days</option>
                <option value="90">Last 90 days</option>
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (stats != null)
    {
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow p-6 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-blue-100 text-sm font-medium">Total Skills</p>
                        <p class="text-3xl font-bold mt-2">@stats.TotalSkills</p>
                        <p class="text-blue-100 text-xs mt-1">@stats.ActiveSkills active</p>
                    </div>
                    <svg class="w-8 h-8 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow p-6 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-green-100 text-sm font-medium">Avg Proficiency</p>
                        <p class="text-3xl font-bold mt-2">@stats.AverageProficiency.ToString("F1")</p>
                        <p class="text-green-100 text-xs mt-1">out of 5.0</p>
                    </div>
                    <svg class="w-8 h-8 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow p-6 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-purple-100 text-sm font-medium">Total Activities</p>
                        <p class="text-3xl font-bold mt-2">@stats.TotalActivities</p>
                        <p class="text-purple-100 text-xs mt-1">@stats.CompletedActivities completed</p>
                    </div>
                    <svg class="w-8 h-8 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
            </div>

            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg shadow p-6 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-orange-100 text-sm font-medium">Learning Hours</p>
                        <p class="text-3xl font-bold mt-2">@stats.TotalLearningHours</p>
                        <p class="text-orange-100 text-xs mt-1">@stats.CurrentWeekHours this week</p>
                    </div>
                    <svg class="w-8 h-8 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Charts Row 1 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <!-- Progress Chart -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Skill Progress Over Time</h3>
                @if (progressChartOptions != null)
                {
                    <ApexChart TItem="ChartData"
                               Title=""
                               Options="@progressChartOptions"
                               Height="300">
                    </ApexChart>
                }
                else
                {
                    <div class="h-64 flex items-center justify-center text-gray-500">
                        <p>No progress data available</p>
                    </div>
                }
            </div>

            <!-- Skill Radar -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Skill Proficiency Radar</h3>
                @if (radarChartOptions != null)
                {
                    <ApexChart TItem="ChartData"
                               Title=""
                               Options="@radarChartOptions"
                               Height="300">
                    </ApexChart>
                }
                else
                {
                    <div class="h-64 flex items-center justify-center text-gray-500">
                        <p>No skill data available</p>
                    </div>
                }
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Timeline</h3>
            @if (timelineChartOptions != null)
            {
                <ApexChart TItem="ChartData"
                           Title=""
                           Options="@timelineChartOptions"
                           Height="200">
                </ApexChart>
            }
            else
            {
                <div class="h-48 flex items-center justify-center text-gray-500">
                    <p>No activity data available</p>
                </div>
            }
        </div>

        <!-- Category Breakdown -->
        @if (stats.CategoryStats.Any())
        {
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Skills by Category</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var category in stats.CategoryStats)
                    {
                        <div class="border border-gray-200 rounded-lg p-4">
                            <h4 class="font-medium text-gray-900">@category.CategoryName</h4>
                            <div class="mt-2 flex justify-between text-sm">
                                <span class="text-gray-600">@category.SkillCount skills</span>
                                <span class="text-gray-900 font-medium">Avg: @category.AverageProficiency.ToString("F1")/5</span>
                            </div>
                            <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-blue-600 h-2 rounded-full"
                                     style="width: @((category.AverageProficiency / 5.0 * 100))%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private OverallStats? stats;
    private bool isLoading = true;
    private int selectedDays = 30;

    private ApexChartOptions<ChartData>? progressChartOptions;
    private ApexChartOptions<ChartData>? radarChartOptions;
    private ApexChartOptions<ChartData>? timelineChartOptions;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        stats = await AnalyticsService.GetOverviewAsync();
        await LoadChartData();
        isLoading = false;
    }

    private async Task LoadChartData()
    {
        await LoadProgressChart();
        await LoadRadarChart();
        await LoadTimelineChart();
    }

    private async Task LoadProgressChart()
    {
        var data = await AnalyticsService.GetProgressChartAsync(selectedDays);
        if (data == null) return;

        var json = JsonSerializer.Serialize(data);
        var chartData = JsonSerializer.Deserialize<ProgressChartData>(json, new JsonSerializerOptions
        {
            PropertyNameCaseInsensitive = true
        });

        if (chartData == null || !chartData.Series.Any()) return;

        progressChartOptions = new ApexChartOptions<ChartData>
        {
            Chart = new Chart { Type = ApexCharts.ChartType.Line, Toolbar = new Toolbar { Show = false } },
            Stroke = new Stroke { Curve = Curve.Smooth, Width = 2 },
            Colors = new List<string> { "#3B82F6", "#10B981", "#F59E0B", "#8B5CF6", "#EC4899" },
            Xaxis = new XAxis
            {
                Categories = chartData.Labels,
                Labels = new XAxisLabels { RotateAlways = true }
            },
            Yaxis = new List<YAxis>
            {
                new YAxis { Min = 0, Max = 5, TickAmount = 5 }
            },
            Legend = new Legend { Position = LegendPosition.Bottom }
        };

        // Add series
        foreach (var series in chartData.Series)
        {
            progressChartOptions.Series.Add(new Series
            {
                Name = series.Key,
                Data = series.Value.Select(v => (object)v).ToList()
            });
        }
    }

    private async Task LoadRadarChart()
    {
        var data = await AnalyticsService.GetSkillRadarAsync();
        if (data == null) return;

        var json = JsonSerializer.Serialize(data);
        var radarData = JsonSerializer.Deserialize<RadarData>(json, new JsonSerializerOptions
        {
            PropertyNameCaseInsensitive = true
        });

        if (radarData == null || !radarData.Labels.Any()) return;

        radarChartOptions = new ApexChartOptions<ChartData>
        {
            Chart = new Chart { Type = ApexCharts.ChartType.Radar, Toolbar = new Toolbar { Show = false } },
            Xaxis = new XAxis { Categories = radarData.Labels },
            Yaxis = new List<YAxis> { new YAxis { Min = 0, Max = 5 } },
            Colors = new List<string> { "#3B82F6", "#10B981" }
        };

        radarChartOptions.Series.Add(new Series
        {
            Name = "Current Level",
            Data = radarData.CurrentLevels.Select(v => (object)v).ToList()
        });

        radarChartOptions.Series.Add(new Series
        {
            Name = "Target Level",
            Data = radarData.TargetLevels.Select(v => (object)v).ToList()
        });
    }

    private async Task LoadTimelineChart()
    {
        var data = await AnalyticsService.GetActivityTimelineAsync(selectedDays);
        if (data == null) return;

        var json = JsonSerializer.Serialize(data);
        var timelineData = JsonSerializer.Deserialize<TimelineData>(json, new JsonSerializerOptions
        {
            PropertyNameCaseInsensitive = true
        });

        if (timelineData?.Activities == null || !timelineData.Activities.Any()) return;

        timelineChartOptions = new ApexChartOptions<ChartData>
        {
            Chart = new Chart { Type = ApexCharts.ChartType.Bar, Toolbar = new Toolbar { Show = false } },
            PlotOptions = new PlotOptions
            {
                Bar = new PlotOptionsBar
                {
                    BorderRadius = 4,
                    DataLabels = new BarDataLabels { Position = BarDataLabelsPosition.Top }
                }
            },
            Xaxis = new XAxis
            {
                Categories = timelineData.Activities.Select(a => a.Date.ToString("MMM dd")).ToList()
            },
            Colors = new List<string> { "#3B82F6" },
            DataLabels = new DataLabels { Enabled = false }
        };

        timelineChartOptions.Series.Add(new Series
        {
            Name = "Activities",
            Data = timelineData.Activities.Select(a => (object)a.Count).ToList()
        });
    }

    // Helper classes for deserialization
    private class ChartData { }

    private class ProgressChartData
    {
        public List<string> Labels { get; set; } = new();
        public Dictionary<string, List<int>> Series { get; set; } = new();
    }

    private class RadarData
    {
        public List<string> Labels { get; set; } = new();
        public List<int> CurrentLevels { get; set; } = new();
        public List<int> TargetLevels { get; set; } = new();
    }

    private class TimelineData
    {
        public List<ActivityDate> Activities { get; set; } = new();
    }

    private class ActivityDate
    {
        public DateTime Date { get; set; }
        public int Count { get; set; }
        public int TotalMinutes { get; set; }
    }
}
@page "/skills"
@attribute [Authorize]
@using SkillSync.Web.Models
@using SkillSync.Web.Services
@inject ISkillService SkillService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Skills - SkillSync</PageTitle>

<div class="px-4 sm:px-0">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">My Skills</h1>
            <p class="text-gray-600 mt-1">Track and manage your learning skills</p>
        </div>
        <button @onclick="NavigateToCreate" class="btn-primary">
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Skill
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center items-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (skills.Count == 0)
    {
        <div class="bg-white rounded-lg shadow p-8 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">No skills yet</h3>
            <p class="mt-1 text-gray-500">Get started by adding your first skill.</p>
            <button @onclick="NavigateToCreate" class="mt-4 btn-primary">
                Add Your First Skill
            </button>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var skill in skills)
            {
                <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow p-6 cursor-pointer"
                     @onclick="() => NavigateToEdit(skill.Id)">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold text-gray-900">@skill.Name</h3>
                            @if (!string.IsNullOrEmpty(skill.CategoryName))
                            {
                                <span class="inline-block mt-1 px-2 py-1 text-xs rounded-full"
                                      style="background-color: @(skill.CategoryColor ?? "#e5e7eb")20; color: @(skill.CategoryColor ?? "#6b7280")">
                                    @skill.CategoryName
                                </span>
                            }
                        </div>
                        <button @onclick:stopPropagation="true" @onclick="() => DeleteSkill(skill.Id)"
                                class="text-red-600 hover:text-red-800 p-1">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(skill.Description))
                    {
                        <p class="text-sm text-gray-600 mb-4">@skill.Description</p>
                    }

                    <div class="space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Proficiency Level</span>
                            <span class="font-medium text-gray-900">@skill.ProficiencyLevel / @skill.TargetLevel</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-blue-600 h-2 rounded-full transition-all"
                                 style="width: @(skill.ProgressPercentage)%"></div>
                        </div>
                        <div class="text-right text-xs text-gray-500">
                            @skill.ProgressPercentage% Complete
                        </div>
                    </div>

                    <div class="mt-4 text-xs text-gray-500">
                        Created @skill.CreatedAt.ToString("MMM dd, yyyy")
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Skill> skills = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadSkills();
    }

    private async Task LoadSkills()
    {
        isLoading = true;
        skills = await SkillService.GetAllSkillsAsync();
        isLoading = false;
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/skills/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/skills/edit/{id}");
    }

    private async Task DeleteSkill(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this skill?"))
        {
            var success = await SkillService.DeleteSkillAsync(id);
            if (success)
            {
                await LoadSkills();
            }
        }
    }
}